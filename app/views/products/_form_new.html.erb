<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-lg-12 form-group margin50">
    <%= f.label :name, class: "col-lg-2" %>
    <div class="col-lg-4">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="col-lg-12 form-group margin50">
    <%= f.label :description, class: "col-lg-2" %>
    <div class="col-lg-4">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>

  <div class="col-lg-12 form-group margin50">
    <%= f.label :price, class: "col-lg-2" %>
    <div class="col-lg-4">
      <%= f.number_field :price, value:0, min:0, class: "form-control" %>
    </div>
  </div>

  <div class="col-lg-12 form-group margin50">
    <%= f.label :status, class: "col-lg-2" %>
    <div class="col-lg-4">
      <%= f.check_box :status %>
    </div>
  </div>

  <div class="col-lg-12 form-group margin50">
    <div class="col-lg-4">
      <%= f.submit "Submit", class:"btn btn-lg btn-primary btn-block btn-aqua" %>
    </div>
  </div>
<% end %>
